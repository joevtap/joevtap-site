---
import { Image } from "astro:assets";
---

<div class="relative">
  <Image
    alt="joevtap"
    src="https://github.com/joevtap.png"
    width={280}
    height={280}
    class="rounded-lg md:rounded-xl border-[1px] border-border lg:size-[280px] size-[80px]"
  />
  <div
    class="absolute border-[1px] border-border bg-background text-foreground lg:flex gap-1 items-center justify-center rounded-full h-12 min-w-12 hidden -bottom-4 -right-8 dark:hover:bg-neutral-900 hover:bg-neutral-300 transition duration-200"
  >
    <p id="mood" class="pointer-events-none"></p>
  </div>
</div>

<script>
  window.addEventListener("load", () => {
    const date = new Date();
    const mood = document.getElementById("mood");
    const moods = ["🤔", "😴", "🤯", "🤨", "👋", "🤓", "😁", "😆", "🫠"];
    const birthdayMoods = ["🥳", "🎉", "🎂"];
    const isBirthday = date.getDate() === 30 && date.getMonth() === 0;

    if (isBirthday) {
      mood!.textContent =
        birthdayMoods[Math.floor(Math.random() * birthdayMoods.length)];
    } else {
      mood!.textContent = moods[Math.floor(Math.random() * moods.length)];
    }
  });
</script>
