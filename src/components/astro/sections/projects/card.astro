---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: string;
  alt: string;
}

const { title, description, image, alt } = Astro.props;
---

<div class="basis-80 w-80 grow rounded-lg p-4 border-[1px] border-border">
  <img
    src={image}
    alt={alt}
    class="aspect-video object-cover rounded-md object-center"
  />
  <div class="mt-4">
    <h5 class="scroll-m-20 text-xl font-semibold tracking-tight">{title}</h5>
    <p class="leading-7 [&:not(:first-child)]:mt-2">{description}</p>
  </div>
</div>
